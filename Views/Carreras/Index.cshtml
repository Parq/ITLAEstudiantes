@model IEnumerable<EstudiantesITLA.Models.Carreras>

@{
    ViewData["Title"] = "IndexCarreras";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomCarrera)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomCarrera)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodCarrera">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodCarrera">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodCarrera">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
